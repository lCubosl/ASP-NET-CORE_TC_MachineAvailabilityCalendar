@model List<TC_MachineAvailabilityCalendar.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h3>Index</h3>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>ImageUrl</th>
            <th>Availability</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <img src="~/images/@item.ImageUrl" alt="@item.Name" style="height:40px; width:auto" />
                </td>

                <td>
                    <a class="btn btn-info text-white" asp-action="Calendar" asp-route-id="@item.Id">View Calendar</a>
                </td>
                <td class="text-end">
                    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>