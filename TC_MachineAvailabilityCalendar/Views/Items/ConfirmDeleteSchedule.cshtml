@model TC_MachineAvailabilityCalendar.Models.Schedule

@{
    ViewData["Title"] = "Confirm Delete Schedule";
}

<h3>Are you sure you want to delete this date</h3>

<div>
    <p>
        Machine: @Model.Item.Name
        <br />
        Date: @Model.ScheduleDate.ToString("dd/MM/yyyy")
    </p>
</div>

<form asp-action="DeleteScheduledDate" method="post">
    <input type="hidden" name="scheduleId" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Calendar" asp-route-id="@Model.ItemId" class="btn btn-secondary">Back</a>
</form>